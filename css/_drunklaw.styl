    //color: #FDFDFD;
    &__container {
        max-width: 1200px;
        margin: 0 auto;
        // h2 {
        //     color: #fff;
        // }
        .faqs {
            display: grid;
            grid-template-rows: auto;
            justify-content: center;
            grid-gap: 20px;
            .faq {
                //border-left: 2px solid $redstar;
                max-width: 700px;
                padding: 20px;
                border-left: 2px solid #e50914;
                // background: #fff;
                // box-shadow: 0 0 2px 5px rgba(0,0,0,0.05);
